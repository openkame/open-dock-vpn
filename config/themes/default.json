                "opacity": 0.6
            },
            "KCheckBox::indicator": {
                "background-color": "#F8F9FA",
                "width": "32px",
                "height": "32px"
            },
            "KCheckBox::indicator:unchecked": {
                "image": "url(config/icons/star-outline.png)"
            },
            "KCheckBox::indicator:checked": {
                "image": "url(config/icons/star-filled.png)"
            }
        },
        "client_panel_last_action": {
            "KLabel": {
                "font-size": "13px",
                "color": "#777777"
            }
        },
        "clientpanel_block": {
            "KFrame": {
                "background-color": "#F8F9FA",
                "border": "1px solid #D0D0D0",
