            "KFrame[selected=\"true\"]" : {
                "border": "2px solid #888C94",
                "background-color": "#E0E4E7",
                "border-radius": "8px",
                "padding": "4px"
            }
        },
        "fullcard_name": {
            "KLabel": {
                "font-size": "16px",
                "font-weight": "bold",
                "color": "#222222"
            }
        },
        "fullcard_autostarting": {
            "KLabel": {
                "color": "#666666",
                "font-style": "italic",
                "font-size": "13px"
            }
        },
        "fullcard_status": {
            "KLabel": {
                "font-size": "14px",
                "font-weight": "bold",
                "color": "#333",
                "padding": "4px"
            }
        },
        "fullcard_fav": {
            "KLabel": {
